@model WebBooking.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Dobrodošli</h1>

<h4>Tu lahko ustvarite rezervacijo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArrivalDate" class="control-label">Datum prihoda</label>
                <input asp-for="ArrivalDate" class="form-control" />
                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label">Datum odhoda</label>
                <input asp-for="DepartureDate" class="form-control" />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookedRoom" class="control-label">Izbira sobe</label>
                @* @Html.DropDownList("izberi sobo", , new { @class = "form-control" }) *@
            </div>
            <div class="form-group">
                <label asp-for="NameAndSurname" class="control-label">Ime in priimek</label>
                <input asp-for="NameAndSurname" class="form-control" />
                <span asp-validation-for="NameAndSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label">Email</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Telefonska številka</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Footnote" class="control-label">Opomba / sporočilo</label>
                <textarea asp-for="Footnote" class="form-control"></textarea>
                <span asp-validation-for="Footnote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
